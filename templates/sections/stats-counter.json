{
  "name": "Stats Counter",
  "slug": "stats-counter",
  "category": "social-proof",
  "description": "An animated counter section for displaying statistics",
  "section_type": "grid",
  "default_components": [
    {
      "type": "stats",
      "props": {
        "title": "By The Numbers",
        "stats": [
          {
            "number": "500+",
            "label": "Speaking Engagements"
          },
          {
            "number": "50K+",
            "label": "Audience Reached"
          },
          {
            "number": "100%",
            "label": "Satisfaction Rate"
          },
          {
            "number": "25+",
            "label": "Years Experience"
          }
        ],
        "animate": true
      },
      "position": 0
    }
  ],
  "styling": {
    "background": "solid",
    "backgroundColor": "#1e293b",
    "textColor": "#ffffff",
    "padding": "80px 20px",
    "text_align": "center",
    "grid_template_columns": "repeat(auto-fit, minmax(200px, 1fr))",
    "column_gap": "40px"
  },
  "responsive": {
    "mobile": {
      "padding": "60px 20px",
      "grid_template_columns": "repeat(2, 1fr)",
      "column_gap": "20px"
    }
  }
}
