{
  "name": "guestify-media-kit-builder",
  "version": "4.0.0",
  "description": "Pure Vue Media Kit Builder with complete test coverage",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:analyze": "vite build --mode production && node scripts/analyze-bundle.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:utils": "node test-utilities-node.js",
    "test:fixes": "npm run test:utils && npm run build",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test && npm run test:e2e",
    "test:architecture": "node scripts/validate-architecture.js",
    "test:audit": "node scripts/audit-component-architecture.js",
    "validate": "npm run test:architecture && npm run build",
    "perf:audit": "node scripts/performance-audit.js",
    "perf:bundle": "node scripts/analyze-bundle.js",
    "perf:all": "npm run build && npm run perf:bundle && npm run perf:audit",
    "lint": "eslint src --ext .js,.vue",
    "lint:fix": "eslint src --ext .js,.vue --fix",
    "clean": "rm -rf dist node_modules/.vite",
    "optimize": "npm run clean && npm run build",
    "migration:complete": "npm run build && npm run test:all && npm run perf:all"
  },
  "dependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "@vue/test-utils": "^2.4.1",
    "chrome-launcher": "^1.1.0",
    "cypress": "^13.6.2",
    "glob": "^10.3.0",
    "jsdom": "^22.1.0",
    "lighthouse": "^11.4.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.5"
  },
  "type": "module",
  "author": "Guestify Team",
  "license": "GPL-2.0-or-later"
}
