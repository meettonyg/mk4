{
  "component_type": "biography",
  "name": "Biography",
  "description": "Professional biography section",
  "version": "1.0.0",
  "dataBindings": {
    "fullName": {
      "source": "pods.first_name + pods.last_name",
      "label": "Full Name",
      "fieldType": "text"
    },
    "title": {
      "source": "pods.professional_title",
      "label": "Professional Title",
      "fieldType": "text"
    },
    "biography": {
      "source": "pods.biography",
      "label": "Biography Text",
      "fieldType": "textarea"
    },
    "profileImage": {
      "source": "pods.profile_image",
      "label": "Profile Image",
      "fieldType": "image"
    }
  },
  "componentOptions": {
    "layout": {
      "type": "select",
      "label": "Layout Style",
      "default": "classic",
      "options": [
        { "value": "classic", "label": "Classic (Image Left)" },
        { "value": "modern", "label": "Modern (Image Right)" },
        { "value": "centered", "label": "Centered" },
        { "value": "card", "label": "Card Style" }
      ],
      "description": "Choose how the biography is displayed"
    },
    "imageSize": {
      "type": "select",
      "label": "Image Size",
      "default": "medium",
      "options": [
        { "value": "small", "label": "Small (150px)" },
        { "value": "medium", "label": "Medium (250px)" },
        { "value": "large", "label": "Large (350px)" }
      ]
    },
    "imageShape": {
      "type": "radio",
      "label": "Image Shape",
      "default": "circle",
      "options": [
        { "value": "circle", "label": "Circle" },
        { "value": "square", "label": "Square" },
        { "value": "rounded", "label": "Rounded" }
      ]
    },
    "showTitle": {
      "type": "boolean",
      "label": "Show Professional Title",
      "default": true,
      "checkboxLabel": "Display professional title below name"
    },
    "textAlignment": {
      "type": "select",
      "label": "Text Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "justify", "label": "Justified" }
      ]
    },
    "backgroundColor": {
      "type": "color",
      "label": "Background Color",
      "default": "#ffffff",
      "description": "Set the background color for the biography section"
    },
    "textColor": {
      "type": "color",
      "label": "Text Color",
      "default": "#333333"
    },
    "maxWords": {
      "type": "number",
      "label": "Maximum Words",
      "default": 500,
      "min": 100,
      "max": 2000,
      "step": 50,
      "description": "Limit the biography text length"
    },
    "showReadMore": {
      "type": "boolean",
      "label": "Show Read More Link",
      "default": false,
      "checkboxLabel": "Add expandable read more for long text"
    },
    "padding": {
      "type": "range",
      "label": "Section Padding",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px"
    }
  },
  "defaultOptions": {
    "layout": "classic",
    "imageSize": "medium",
    "imageShape": "circle",
    "showTitle": true,
    "textAlignment": "left",
    "backgroundColor": "#ffffff",
    "textColor": "#333333",
    "maxWords": 500,
    "showReadMore": false,
    "padding": 40
  }
}