{
  "component_type": "authority-hook",
  "name": "Authority Hook",
  "description": "Authority positioning with WHO, WHAT, WHEN, WHERE, WHY, HOW framework",
  "dataBindings": {
    "title": "authority_section_title",
    "who": "authority_who",
    "what": "authority_what",
    "when": "authority_when",
    "where": "authority_where",
    "why": "authority_why",
    "how": "authority_how",
    "subtitle": "authority_subtitle"
  },
  "defaultOptions": {
    "layout": "grid",
    "showIcons": true,
    "compactMode": false,
    "emphasisOrder": "what-who",
    "colorScheme": "professional",
    "showLabels": true,
    "cardStyle": "bordered"
  },
  "componentOptions": {
    "layout": {
      "type": "select",
      "label": "Layout Style",
      "default": "grid",
      "options": {
        "grid": "Grid Layout (2x3)",
        "list": "Vertical List",
        "cards": "Card Layout",
        "timeline": "Timeline Style",
        "tabs": "Tabbed View",
        "accordion": "Accordion"
      }
    },
    "showIcons": {
      "type": "boolean",
      "label": "Show Component Icons",
      "default": true
    },
    "showLabels": {
      "type": "boolean",
      "label": "Show WHO/WHAT Labels",
      "default": true
    },
    "compactMode": {
      "type": "boolean",
      "label": "Compact Display",
      "default": false
    },
    "emphasisOrder": {
      "type": "select",
      "label": "Emphasis Order",
      "default": "what-who",
      "options": {
        "what-who": "Emphasize WHAT & WHO",
        "why-how": "Emphasize WHY & HOW",
        "equal": "Equal Emphasis",
        "who-first": "WHO First",
        "what-first": "WHAT First"
      }
    },
    "colorScheme": {
      "type": "select",
      "label": "Color Scheme",
      "default": "professional",
      "options": {
        "professional": "Professional Blue",
        "warm": "Warm Orange",
        "neutral": "Neutral Gray",
        "bold": "Bold Purple",
        "gradient": "Gradient Cards"
      }
    },
    "cardStyle": {
      "type": "select",
      "label": "Card Style",
      "default": "bordered",
      "options": {
        "bordered": "Bordered",
        "shadow": "Shadow",
        "flat": "Flat",
        "elevated": "Elevated"
      },
      "condition": {
        "field": "layout",
        "value": ["grid", "cards"]
      }
    },
    "iconStyle": {
      "type": "select",
      "label": "Icon Style",
      "default": "filled",
      "options": {
        "filled": "Filled",
        "outline": "Outline",
        "colored": "Colored Background"
      },
      "condition": {
        "field": "showIcons",
        "value": true
      }
    }
  },
  "responsive": {
    "mobile": {
      "layout": "list",
      "compactMode": true,
      "showIcons": false
    },
    "tablet": {
      "layout": "grid"
    }
  },
  "layouts": {
    "grid": {
      "container": "grid grid-cols-2 md:grid-cols-3 gap-4",
      "item": "p-4 rounded-lg",
      "label": "text-xs font-semibold uppercase mb-2",
      "content": "text-base"
    },
    "list": {
      "container": "space-y-4",
      "item": "border-l-4 pl-4 py-2",
      "label": "text-sm font-semibold uppercase mb-1",
      "content": "text-base"
    },
    "cards": {
      "container": "grid gap-6",
      "item": "bg-white rounded-lg p-6",
      "icon": "text-3xl mb-3",
      "label": "text-sm font-semibold uppercase mb-2",
      "content": "text-base"
    },
    "timeline": {
      "container": "relative",
      "line": "absolute left-8 top-0 bottom-0 w-0.5 bg-gray-300",
      "item": "relative pl-16 pb-8",
      "dot": "absolute left-6 w-4 h-4 bg-blue-500 rounded-full",
      "label": "text-sm font-semibold uppercase mb-1",
      "content": "text-base"
    },
    "tabs": {
      "container": "border rounded-lg",
      "tabList": "flex border-b",
      "tab": "px-4 py-2 font-medium",
      "tabPanel": "p-6"
    },
    "accordion": {
      "container": "space-y-2",
      "item": "border rounded-lg overflow-hidden",
      "header": "p-4 bg-gray-50 font-medium cursor-pointer",
      "content": "p-4"
    }
  }
}
