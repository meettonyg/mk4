{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Company Logo Component Schema",
  "description": "Schema for company logo component data (SINGLE field pattern)",
  "type": "object",
  "properties": {
    "logo": {
      "type": ["object", "null"],
      "description": "Logo data object (SINGLE logo or null)",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Logo URL"
        },
        "alt": {
          "type": "string",
          "description": "Alt text for accessibility",
          "default": "Company Logo"
        },
        "id": {
          "type": ["integer", "null"],
          "description": "WordPress attachment ID"
        },
        "type": {
          "type": "string",
          "enum": ["company"],
          "description": "Logo type indicator"
        },
        "source": {
          "type": "string",
          "enum": ["pods", "custom"],
          "description": "Logo source indicator"
        }
      },
      "required": ["url"]
    },
    "usePodsData": {
      "type": "boolean",
      "description": "Whether to use Pods data or custom logo",
      "default": true
    },
    "size": {
      "type": "string",
      "enum": ["small", "medium", "large"],
      "description": "Logo display size",
      "default": "medium"
    },
    "alignment": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "description": "Logo alignment",
      "default": "center"
    }
  },
  "required": []
}
