{
  "component_type": "guest-intro",
  "name": "Guest Introduction",
  "description": "Display guest introduction text from Pods",
  "dataBindings": {
    "introduction": "introduction"
  },
  "defaultOptions": {
    "layout": "centered",
    "textAlignment": "left"
  },
  "componentOptions": {
    "layout": {
      "type": "select",
      "label": "Layout Style",
      "default": "centered",
      "options": {
        "centered": "Centered",
        "left-aligned": "Left Aligned",
        "card": "Card Layout"
      }
    },
    "textAlignment": {
      "type": "select",
      "label": "Text Alignment",
      "default": "left",
      "options": {
        "left": "Left",
        "center": "Center",
        "right": "Right"
      }
    }
  },
  "responsive": {
    "mobile": {
      "layout": "centered",
      "textAlignment": "center"
    },
    "tablet": {
      "layout": "centered"
    }
  },
  "layouts": {
    "centered": {
      "container": "text-center max-w-3xl mx-auto",
      "introduction": "text-base leading-relaxed"
    },
    "left-aligned": {
      "container": "text-left max-w-4xl",
      "introduction": "text-base leading-relaxed"
    },
    "card": {
      "container": "bg-white rounded-lg shadow-lg p-8 max-w-3xl",
      "introduction": "text-base leading-relaxed"
    }
  }
}
