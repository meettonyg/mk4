{
  "name": "Speaking Topics",
  "category": "topics-skills",
  "icon": "topics-grid.svg",
  "description": "Areas of expertise and speaking topics display",
  "isPremium": false,
  "version": "2.0.0-phase2",
  "order": 3,
  "requiresServerRender": true,
  
  "dataBindings": {
    "topics": "speaking_topics",
    "expertise": "areas_of_expertise",
    "title": "topics_section_title"
  },
  
  "componentOptions": {
    "layout": {
      "type": "select",
      "label": "Display Layout",
      "description": "Choose how topics are displayed",
      "default": "grid",
      "options": {
        "grid": "Grid Layout",
        "list": "Vertical List", 
        "tags": "Tag Cloud"
      },
      "section": "layout",
      "preview": true
    },
    "maxTopics": {
      "type": "number",
      "label": "Maximum Topics to Show",
      "description": "Limit the number of topics displayed",
      "default": 6,
      "min": 1,
      "max": 20,
      "section": "content"
    },
    "showPriority": {
      "type": "boolean",
      "label": "Show Priority Indicators", 
      "description": "Display priority badges for high-priority topics",
      "default": false,
      "section": "content"
    },
    "columnsDesktop": {
      "type": "select",
      "label": "Desktop Columns",
      "description": "Number of columns for grid layout on desktop",
      "default": "3",
      "options": {
        "2": "2 Columns",
        "3": "3 Columns",
        "4": "4 Columns"
      },
      "section": "layout",
      "preview": true,
      "conditional": {
        "field": "layout",
        "value": "grid"
      }
    },
    "sortBy": {
      "type": "select",
      "label": "Sort Topics By",
      "description": "Choose how topics are ordered",
      "default": "priority",
      "options": {
        "priority": "Priority",
        "alphabetical": "Alphabetical",
        "custom": "Custom Order"
      },
      "section": "content"
    },
    "showDescriptions": {
      "type": "boolean",
      "label": "Show Topic Descriptions",
      "description": "Include descriptions below topic titles",
      "default": true,
      "section": "content"
    },
    "colorScheme": {
      "type": "select",
      "label": "Color Scheme",
      "description": "Choose the visual theme for topics",
      "default": "blue",
      "options": {
        "blue": "Professional Blue",
        "green": "Success Green",
        "purple": "Creative Purple",
        "neutral": "Neutral Gray"
      },
      "section": "appearance",
      "preview": true
    }
  },
  
  "responsiveBehavior": {
    "mobile": {
      "layout": "list",
      "columnsDesktop": "1"
    },
    "tablet": {
      "columnsDesktop": "2"
    }
  },
  
  "sections": {
    "content": {
      "title": "Content Options",
      "description": "Configure what topics are shown and how",
      "order": 1,
      "icon": "list"
    },
    "layout": {
      "title": "Layout Settings", 
      "description": "Choose display layout and columns",
      "order": 2,
      "icon": "grid"
    },
    "appearance": {
      "title": "Appearance",
      "description": "Customize colors and visual style",
      "order": 3,
      "icon": "palette"
    }
  },
  
  "presets": {
    "professional": {
      "name": "Professional Grid",
      "options": {
        "layout": "grid",
        "columnsDesktop": "3",
        "showDescriptions": true,
        "colorScheme": "blue",
        "maxTopics": 6
      }
    },
    "compact": {
      "name": "Compact Tags",
      "options": {
        "layout": "tags",
        "showDescriptions": false,
        "colorScheme": "neutral",
        "maxTopics": 12
      }
    },
    "detailed": {
      "name": "Detailed List",
      "options": {
        "layout": "list",
        "showDescriptions": true,
        "showPriority": true,
        "colorScheme": "green",
        "maxTopics": 8
      }
    }
  }
}
