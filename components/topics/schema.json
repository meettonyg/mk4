{
  "component_type": "topics",
  "name": "Speaking Topics",
  "description": "List of expertise areas and speaking topics",
  "version": "1.0.0",
  "dataBindings": {
    "topics": {
      "source": "pods.speaking_topics",
      "label": "Speaking Topics",
      "fieldType": "repeater"
    }
  },
  "componentOptions": {
    "layout": {
      "type": "select",
      "label": "Layout Style",
      "default": "grid",
      "options": [
        { "value": "grid", "label": "Grid Layout" },
        { "value": "list", "label": "List Layout" },
        { "value": "cards", "label": "Card Layout" },
        { "value": "accordion", "label": "Accordion" }
      ],
      "description": "Choose how topics are displayed",
      "category": "layout"
    },
    "columns": {
      "type": "select",
      "label": "Number of Columns",
      "default": "2",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" },
        { "value": "3", "label": "3 Columns" },
        { "value": "4", "label": "4 Columns" }
      ],
      "description": "For grid layout only",
      "category": "layout"
    },
    "showIcons": {
      "type": "boolean",
      "label": "Show Topic Icons",
      "default": true,
      "checkboxLabel": "Display icons next to topics",
      "category": "appearance"
    },
    "iconStyle": {
      "type": "select",
      "label": "Icon Style",
      "default": "filled",
      "options": [
        { "value": "filled", "label": "Filled" },
        { "value": "outline", "label": "Outline" },
        { "value": "colored", "label": "Colored" }
      ],
      "category": "appearance"
    },
    "showDescriptions": {
      "type": "boolean",
      "label": "Show Descriptions",
      "default": true,
      "checkboxLabel": "Display topic descriptions",
      "category": "content"
    },
    "descriptionLength": {
      "type": "range",
      "label": "Description Length",
      "default": 100,
      "min": 50,
      "max": 300,
      "step": 25,
      "unit": " chars",
      "description": "Maximum characters for descriptions",
      "category": "content"
    },
    "cardStyle": {
      "type": "select",
      "label": "Card Style",
      "default": "bordered",
      "options": [
        { "value": "bordered", "label": "Bordered" },
        { "value": "elevated", "label": "Elevated (Shadow)" },
        { "value": "flat", "label": "Flat" },
        { "value": "gradient", "label": "Gradient Background" }
      ],
      "category": "appearance"
    },
    "primaryColor": {
      "type": "color",
      "label": "Primary Color",
      "default": "#3b82f6",
      "description": "Main color for icons and accents",
      "category": "colors"
    },
    "backgroundColor": {
      "type": "color",
      "label": "Card Background",
      "default": "#ffffff",
      "category": "colors"
    },
    "textColor": {
      "type": "color",
      "label": "Text Color",
      "default": "#1f2937",
      "category": "colors"
    },
    "animateOnScroll": {
      "type": "boolean",
      "label": "Animate on Scroll",
      "default": false,
      "checkboxLabel": "Fade in topics as they appear",
      "category": "effects"
    },
    "hoverEffect": {
      "type": "select",
      "label": "Hover Effect",
      "default": "lift",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "lift", "label": "Lift Up" },
        { "value": "scale", "label": "Scale" },
        { "value": "glow", "label": "Glow" }
      ],
      "category": "effects"
    },
    "spacing": {
      "type": "range",
      "label": "Item Spacing",
      "default": 20,
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "category": "layout"
    },
    "maxTopics": {
      "type": "number",
      "label": "Maximum Topics",
      "default": 12,
      "min": 1,
      "max": 50,
      "description": "Limit number of topics displayed",
      "category": "content"
    },
    "showViewMore": {
      "type": "boolean",
      "label": "Show View More",
      "default": true,
      "checkboxLabel": "Add 'View More' button if topics exceed max",
      "category": "content"
    },
    "customTitle": {
      "type": "text",
      "label": "Section Title",
      "default": "Speaking Topics",
      "placeholder": "Enter custom title",
      "category": "content"
    },
    "titleAlignment": {
      "type": "radio",
      "label": "Title Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "category": "layout"
    }
  },
  "defaultOptions": {
    "layout": "grid",
    "columns": "2",
    "showIcons": true,
    "iconStyle": "filled",
    "showDescriptions": true,
    "descriptionLength": 100,
    "cardStyle": "bordered",
    "primaryColor": "#3b82f6",
    "backgroundColor": "#ffffff",
    "textColor": "#1f2937",
    "animateOnScroll": false,
    "hoverEffect": "lift",
    "spacing": 20,
    "maxTopics": 12,
    "showViewMore": true,
    "customTitle": "Speaking Topics",
    "titleAlignment": "center"
  }
}