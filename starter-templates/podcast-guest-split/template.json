    "type": "podcast-guest",
    "label": "Podcast Guests",
    "icon": "fa-solid fa-podcast",
    "use_case": "Podcast Booking",
    "layout_variant": "split-layout",
    "use_cases": [
      "Subject matter experts seeking podcast appearances",
      "Authors promoting books",
      "Entrepreneurs sharing their story",
      "Thought leaders building audience",
      "Anyone seeking podcast interviews"
    ]
