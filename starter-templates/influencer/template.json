          "data": {
            "title": "Brands I've Worked With",
            "logos": [
              { "name": "Brand 1", "alt": "Brand logo" },
              { "name": "Brand 2", "alt": "Brand logo" },
              { "name": "Brand 3", "alt": "Brand logo" },
              { "name": "Brand 4", "alt": "Brand logo" },
              { "name": "Brand 5", "alt": "Brand logo" },
              { "name": "Brand 6", "alt": "Brand logo" }
            ]
          }
        }
      ]
    },
    {
      "id": "bio-section",
      "type": "two_column",
      "columns": {
        "ratio": "40-60",
        "1": [
          {
            "type": "profile-photo",
            "settings": {
              "style": "rounded",
              "size": "large"
            },
            "data": {
              "alt": "Creator photo"
            }
          },
          {
            "type": "social",
            "settings": {
              "layout": "horizontal",
              "showLabels": false,
              "iconSize": "large"
            },
            "data": {}
          }
        ],
        "2": [
          {
            "type": "biography",
            "settings": {
              "style": "casual",
              "showTitle": true
            },
            "data": {
              "title": "Hey, I'm [Name]!",
              "content": "Share your story in an authentic, conversational way. What got you started? What do you love creating? What makes your community special?\n\n**My audience:** Describe your demographics - age range, interests, what they're passionate about.\n\n**My values:** What matters to you? What kind of brands do you love working with?"
            }
          }
        ]
      }
    },
    {
      "id": "testimonials-section",
      "type": "full_width",
      "components": [
        {
          "type": "testimonials",
          "settings": {
            "layout": "cards",
            "columns": 2,
            "showPhotos": false,
            "showCompany": true,
            "quoteStyle": "standard"
          },
          "data": {
            "title": "What Brands Say",
            "items": [
              {
                "quote": "Working with [Name] exceeded all our campaign goals. The content was authentic and the engagement was incredible.",
                "author": "Marketing Manager",
                "company": "Brand Name"
              },
              {
                "quote": "One of our most successful influencer partnerships. Professional, creative, and delivers real results.",
                "author": "Brand Director",
                "company": "Brand Name"
              }
            ]
          }
        }
      ]
    },
    {
      "id": "services-section",
      "type": "full_width",
      "background": "primary",
      "components": [
        {
          "type": "topics",
          "settings": {
            "layout": "grid",
            "columns": 3,
            "showDescriptions": true,
            "style": "cards"
          },
          "data": {
            "title": "Partnership Options",
            "items": [
              {
                "title": "Sponsored Posts",
                "description": "Feed posts, stories, and reels featuring your product or service."
              },
              {
                "title": "Brand Ambassador",
                "description": "Long-term partnerships with ongoing content and promotion."
              },
              {
                "title": "Content Creation",
                "description": "UGC and branded content for your channels."
              }
            ]
          }
        }
      ]
    },
    {
      "id": "contact-section",
      "type": "full_width",
      "background": "gradient",
      "components": [
        {
          "type": "contact",
          "settings": {
            "style": "brand-inquiry",
            "fields": ["name", "email", "company", "campaign_type", "budget_range", "timeline", "message"],
            "showLabels": true,
            "maxWidth": "700px"
          },
          "data": {
            "title": "Let's Create Together",
            "subtitle": "Tell me about your brand and campaign goals",
            "button_text": "Send Partnership Inquiry"
          }
        }
      ]
    }
  ]
