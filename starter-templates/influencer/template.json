{
  "template_id": "influencer",
  "template_name": "Creator Media Kit",
  "version": "1.0.0",
  "description": "Built for content creators, influencers, and digital entrepreneurs. Features social stats, content samples, brand collaborations, and partnership inquiries.",
  "persona": {
    "type": "influencer",
    "label": "Creators & Influencers",
    "icon": "fa-solid fa-hashtag",
    "use_case": "Brand Partnerships",
    "layout_variant": "center-stack",
    "use_cases": [
      "Content creators",
      "Social media influencers",
      "YouTubers and streamers",
      "Digital entrepreneurs",
      "Brand ambassadors",
      "Lifestyle bloggers"
    ]
  },
  "metadata": {
    "tags": ["creator", "influencer", "social", "content", "brand", "collaboration"],
    "is_premium": false,
    "sort_order": 50,
    "recommended_themes": ["creative-bold", "modern-dark", "podcast-guest"]
  },
  "preview_image": "preview.jpg",
  "sections": [
    {
      "id": "hero-section",
      "type": "full_width",
      "background": "gradient",
      "components": [
        {
          "type": "hero",
          "settings": {
            "layout": "center_aligned",
            "imageStyle": "circle",
            "showCTA": true,
            "minHeight": "550px"
          },
          "data": {
            "headline": "Your Name",
            "subheadline": "Content Creator | [Niche] Expert",
            "description": "Creating content that inspires and engages [X]M+ followers across platforms.",
            "cta_text": "Let's Collaborate"
          }
        }
      ]
    },
    {
      "id": "stats-section",
      "type": "full_width",
      "background": "surface",
      "components": [
        {
          "type": "stats",
          "settings": {
            "layout": "cards",
            "columns": 4,
            "showIcons": true,
            "animateNumbers": true,
            "colorScheme": "gradient"
          },
          "data": {
            "items": [
              { "value": "500K+", "label": "Total Followers", "icon": "users" },
              { "value": "10M+", "label": "Monthly Reach", "icon": "eye" },
              { "value": "8.5%", "label": "Engagement Rate", "icon": "heart" },
              { "value": "50+", "label": "Brand Partners", "icon": "handshake" }
            ]
          }
        }
      ]
    },
    {
      "id": "platforms-section",
      "type": "full_width",
      "components": [
        {
          "type": "stats",
          "settings": {
            "layout": "grid",
            "columns": 4,
            "showIcons": true,
            "style": "platform-cards"
          },
          "data": {
            "title": "Where I Create",
            "subtitle": "Platform breakdown and audience demographics",
            "items": [
              { "value": "250K", "label": "Instagram", "icon": "instagram" },
              { "value": "150K", "label": "YouTube", "icon": "youtube" },
              { "value": "75K", "label": "TikTok", "icon": "tiktok" },
              { "value": "25K", "label": "Twitter", "icon": "twitter" }
            ]
          }
        }
      ]
    },
    {
      "id": "content-section",
      "type": "full_width",
      "background": "dark",
      "components": [
        {
          "type": "photo-gallery",
          "settings": {
            "layout": "masonry",
            "columns": 3,
            "style": "content-samples",
            "showCaptions": true
          },
          "data": {
            "title": "Content Samples",
            "subtitle": "A selection of recent work",
            "images": [
              { "alt": "Content sample 1", "caption": "Brand Campaign" },
              { "alt": "Content sample 2", "caption": "Lifestyle Post" },
              { "alt": "Content sample 3", "caption": "Product Feature" },
              { "alt": "Content sample 4", "caption": "Behind the Scenes" },
              { "alt": "Content sample 5", "caption": "Tutorial" },
              { "alt": "Content sample 6", "caption": "Collaboration" }
            ]
          }
        }
      ]
    },
    {
      "id": "topics-section",
      "type": "full_width",
      "components": [
        {
          "type": "topics",
          "settings": {
            "layout": "grid",
            "columns": 3,
            "showDescriptions": true,
            "showIcons": true,
            "style": "cards"
          },
          "data": {
            "title": "Content Categories",
            "subtitle": "What I create and talk about",
            "items": [
              {
                "title": "Lifestyle & Wellness",
                "description": "Daily routines, self-care, and living your best life.",
                "icon": "heart"
              },
              {
                "title": "Product Reviews",
                "description": "Honest reviews and recommendations my audience trusts.",
                "icon": "star"
              },
              {
                "title": "Behind the Scenes",
                "description": "Authentic glimpses into the creator life.",
                "icon": "film"
              }
            ]
          }
        }
      ]
    },
    {
      "id": "brands-section",
      "type": "full_width",
      "background": "surface",
      "components": [
        {
          "type": "logo-grid",
          "settings": {
            "layout": "row",
            "columns": 6,
            "showLabels": false,
            "grayscale": false
