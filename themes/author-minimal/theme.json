{
  "theme_id": "author_minimal",
  "theme_name": "Author Minimal",
  "version": "2.0.0",
  "description": "Ultra-clean template for literary authors who value elegance and restraint. Maximum whitespace, refined typography, and quiet sophistication.",
  "category": "author",
  "metadata": {
    "audience_type": "author",
    "audience_label": "Authors & Writers",
    "style_variant": "minimal",
    "style_label": "Minimal",
    "icon": "fa-solid fa-book",
    "preview_colors": ["#171717", "#525252"],
    "tags": ["author", "writer", "minimal", "literary", "elegant"],
    "is_premium": false,
    "is_new": true,
    "sort_order": 17,
    "author": "Guestify",
    "use_case": "Literary fiction authors, poets, essayists, memoir writers"
  },
  "preview_image": "preview.jpg",
  "thumbnail_image": "thumbnail.jpg",
  "defaultPreset": "medium",
  "defaultContent": {
    "sections": [
      {
        "id": "hero-section",
        "type": "full_width",
        "background": "light",
        "components": [
          {
            "type": "hero",
            "settings": {
              "layout": "center_aligned",
              "imageStyle": "none",
              "showCTA": false,
              "minHeight": "400px",
              "style": "minimal"
            },
            "data": {
              "headline": "Author Name",
              "subheadline": "Writer"
            }
          }
        ]
      },
      {
        "id": "quote-section",
        "type": "full_width",
        "components": [
          {
            "type": "biography",
            "settings": {
              "style": "quote",
              "showTitle": false,
              "maxWidth": "600px"
            },
            "data": {
              "content": "\"I write because I must. The stories demand to be told.\""
            }
          }
        ]
      },
      {
        "id": "featured-book-section",
        "type": "two_column",
        "columns": {
          "ratio": "30-70",
          "1": [
            {
              "type": "photo-gallery",
              "settings": {
                "layout": "single",
                "style": "book-cover-minimal"
              },
              "data": {
                "images": [{ "alt": "Book cover" }]
              }
            }
          ],
          "2": [
            {
              "type": "guest-intro",
              "settings": {
                "style": "minimal"
              },
              "data": {
                "title": "The New Novel",
                "content": "A meditation on loss, memory, and the spaces between words.\n\n\"Exquisite prose that lingers long after the final page.\" â€” Literary Review",
                "cta_text": "Read more",
                "cta_link": "#"
              }
            }
          ]
        }
      },
      {
        "id": "bio-section",
        "type": "full_width",
        "components": [
          {
            "type": "biography",
            "settings": {
              "style": "minimal",
              "showTitle": true,
              "layout": "centered",
              "maxWidth": "650px"
            },
            "data": {
              "title": "About",
              "content": "I've been writing for as long as I can remember. My work explores the quiet moments, the unspoken truths, and the beauty in everyday existence.\n\nMy novels have been translated into [X] languages. When I'm not writing, I can be found [activity] in [location]."
            }
          }
        ]
      },
      {
        "id": "books-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "photo-gallery",
            "settings": {
              "layout": "grid",
              "columns": 4,
              "style": "book-covers-minimal",
              "showCaptions": true
            },
            "data": {
              "title": "Books",
              "images": [
                { "alt": "Book 1", "caption": "Title One (2023)" },
                { "alt": "Book 2", "caption": "Title Two (2020)" },
                { "alt": "Book 3", "caption": "Title Three (2017)" },
                { "alt": "Book 4", "caption": "Title Four (2014)" }
              ]
            }
          }
        ]
      },
      {
        "id": "contact-section",
        "type": "full_width",
        "components": [
          {
            "type": "contact",
            "settings": {
              "style": "minimal",
              "layout": "centered",
              "fields": ["name", "email", "message"],
              "maxWidth": "450px"
            },
            "data": {
              "title": "Contact",
              "button_text": "Send"
            }
          }
        ]
      }
    ]
  },
  "typography": {
    "primary_font": {
      "family": "Crimson Pro, serif",
      "weights": [400, 500, 600],
      "fallback": "Georgia, serif"
    },
    "heading_font": {
      "family": "Crimson Pro, serif",
      "weights": [400, 500],
      "fallback": "Georgia, serif"
    },
    "font_scale": 1.15,
    "line_height": {
      "body": 1.9,
      "heading": 1.4
    }
  },
  "colors": {
    "primary": "#171717",
    "primary_hover": "#262626",
    "secondary": "#404040",
    "accent": "#525252",
    "text": "#171717",
    "text_light": "#525252",
    "text_muted": "#a3a3a3",
    "background": "#ffffff",
    "surface": "#fafafa",
    "surface_hover": "#f5f5f5",
    "border": "#e5e5e5",
    "error": "#b91c1c",
    "success": "#15803d",
    "warning": "#d97706"
  },
  "spacing": {
    "base_unit": "8px",
    "component_gap": "96px",
    "section_gap": "160px",
    "container_padding": "48px",
    "content_max_width": "800px"
  },
  "effects": {
    "border_radius": "0px",
    "border_radius_sm": "0px",
    "border_radius_lg": "0px",
    "shadow": "none",
    "shadow_sm": "none",
    "shadow_lg": "none",
    "transitions": "opacity 0.4s ease"
  },
  "components": {
    "button": {
      "padding": "10px 24px",
      "font_weight": "400",
      "letter_spacing": "0.05em",
      "text_transform": "lowercase",
      "border_width": "1px"
    },
    "card": {
      "padding": "48px",
      "shadow": "none",
      "border_width": "0"
    }
  },
  "special": {
    "minimal_decoration": true,
    "emphasis_through_typography": true,
    "ample_whitespace": true
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1100px"
    },
    "font_scale_mobile": 0.95,
    "spacing_scale_mobile": 0.7
  }
}
