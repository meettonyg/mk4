{
  "theme_id": "professional_clean",
  "theme_name": "Professional Clean",
  "version": "2.0.0",
  "description": "A clean, professional template perfect for business professionals, consultants, and corporate speakers. Balanced design that emphasizes credibility and expertise.",
  "category": "corporate",
  "metadata": {
    "tags": ["business", "clean", "professional", "consultant", "corporate"],
    "is_premium": false,
    "is_new": false,
    "sort_order": 10,
    "author": "Guestify",
    "use_case": "Business consultants, corporate trainers, financial advisors, management professionals"
  },
  "preview_image": "preview.jpg",
  "thumbnail_image": "thumbnail.jpg",
  "defaultPreset": "medium",
  "defaultContent": {
    "sections": [
      {
        "id": "hero-section",
        "type": "full_width",
        "background": "light",
        "components": [
          {
            "type": "hero",
            "settings": {
              "layout": "split_screen",
              "imageStyle": "rounded",
              "showCTA": true,
              "minHeight": "550px"
            },
            "data": {
              "headline": "Your Name",
              "subheadline": "Professional Title | Industry Expert",
              "description": "Helping organizations achieve measurable results through strategic consulting and proven methodologies.",
              "cta_text": "Schedule a Consultation",
              "cta_link": "#contact"
            }
          }
        ]
      },
      {
        "id": "stats-section",
        "type": "full_width",
        "background": "primary",
        "components": [
          {
            "type": "stats",
            "settings": {
              "layout": "horizontal",
              "columns": 4,
              "showIcons": false,
              "animateNumbers": true,
              "colorScheme": "light"
            },
            "data": {
              "items": [
                { "value": "15+", "label": "Years Experience" },
                { "value": "200+", "label": "Clients Served" },
                { "value": "$50M+", "label": "Value Delivered" },
                { "value": "95%", "label": "Client Retention" }
              ]
            }
          }
        ]
      },
      {
        "id": "services-section",
        "type": "full_width",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "grid",
              "columns": 3,
              "showDescriptions": true,
              "showIcons": true,
              "style": "cards"
            },
            "data": {
              "title": "How I Can Help",
              "subtitle": "Specialized expertise across key areas",
              "items": [
                {
                  "title": "Strategic Planning",
                  "description": "Develop clear roadmaps that align your team and drive sustainable growth.",
                  "icon": "compass"
                },
                {
                  "title": "Operational Excellence",
                  "description": "Streamline processes and optimize performance across your organization.",
                  "icon": "chart-bar"
                },
                {
                  "title": "Leadership Development",
                  "description": "Build high-performing teams through tailored coaching and training programs.",
                  "icon": "users"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "bio-section",
        "type": "two_column",
        "columns": {
          "ratio": "60-40",
          "1": [
            {
              "type": "biography",
              "settings": {
                "style": "professional",
                "showTitle": true
              },
              "data": {
                "title": "About Me",
                "content": "With over 15 years of experience in [industry], I've helped organizations of all sizes navigate complex challenges and achieve their strategic objectives.\n\nMy approach combines rigorous analysis with practical implementation, ensuring that recommendations translate into real-world results. I've worked with Fortune 500 companies, mid-market firms, and high-growth startups across multiple sectors.\n\n**Education & Credentials:**\n• MBA from [Business School]\n• [Professional Certification]\n• [Industry Accreditation]"
              }
            }
          ],
          "2": [
            {
              "type": "profile-photo",
              "settings": {
                "style": "rounded",
                "size": "large"
              },
              "data": {
                "alt": "Professional headshot"
              }
            }
          ]
        }
      },
      {
        "id": "clients-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "logo-grid",
            "settings": {
              "layout": "row",
              "columns": 6,
              "showLabels": false,
              "grayscale": true,
              "hoverColor": true
            },
            "data": {
              "title": "Trusted By",
              "logos": [
                { "name": "Company 1", "alt": "Client logo" },
                { "name": "Company 2", "alt": "Client logo" },
                { "name": "Company 3", "alt": "Client logo" },
                { "name": "Company 4", "alt": "Client logo" },
                { "name": "Company 5", "alt": "Client logo" },
                { "name": "Company 6", "alt": "Client logo" }
              ]
            }
          }
        ]
      },
      {
        "id": "testimonials-section",
        "type": "full_width",
        "components": [
          {
            "type": "testimonials",
            "settings": {
              "layout": "cards",
              "columns": 2,
              "showPhotos": true,
              "showCompany": true,
              "quoteStyle": "standard",
              "colorScheme": "blue"
            },
            "data": {
              "title": "Client Results",
              "items": [
                {
                  "quote": "Working with [Name] transformed our approach to strategic planning. We saw a 40% improvement in operational efficiency within the first year.",
                  "author": "Executive Name",
                  "role": "CEO",
                  "company": "Company Name"
                },
                {
                  "quote": "Practical, insightful, and results-driven. [Name] helped us navigate a critical transition with confidence.",
                  "author": "Executive Name",
                  "role": "VP Operations",
                  "company": "Company Name"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "speaking-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "list",
              "showDescriptions": true,
              "style": "minimal"
            },
            "data": {
              "title": "Speaking Topics",
              "subtitle": "Available for keynotes, workshops, and corporate training",
              "items": [
                {
                  "title": "The Future of Work: Preparing Your Organization for Change",
                  "description": "60-90 minute keynote on navigating workforce transformation"
                },
                {
                  "title": "Building a Culture of Excellence",
                  "description": "Half-day workshop on organizational culture and performance"
                },
                {
                  "title": "Strategic Decision-Making in Uncertain Times",
                  "description": "Executive session on frameworks for complex decisions"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "contact-section",
        "type": "two_column",
        "columns": {
          "ratio": "55-45",
          "1": [
            {
              "type": "contact",
              "settings": {
                "style": "professional",
                "fields": ["name", "email", "company", "phone", "inquiry_type", "message"],
                "showLabels": true
              },
              "data": {
                "title": "Start a Conversation",
                "subtitle": "Let's discuss how I can help your organization",
                "button_text": "Send Message"
              }
            }
          ],
          "2": [
            {
              "type": "call-to-action",
              "settings": {
                "style": "card",
                "showIcon": true
              },
              "data": {
                "title": "Prefer to Talk?",
                "description": "Schedule a complimentary 30-minute discovery call to discuss your needs.",
                "cta_text": "Book a Call",
                "cta_link": "#"
              }
            },
            {
              "type": "social",
              "settings": {
                "layout": "horizontal",
                "showLabels": false,
                "iconSize": "medium"
              },
              "data": {
                "title": "Connect"
              }
            }
          ]
        }
      }
    ]
  },
  "typography": {
    "primary_font": {
      "family": "Inter, sans-serif",
      "weights": [300, 400, 600, 700],
      "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "heading_font": {
      "family": "Montserrat, sans-serif",
      "weights": [400, 600, 700, 800],
      "fallback": "Arial, sans-serif"
    },
    "font_scale": 1.25,
    "line_height": {
      "body": 1.7,
      "heading": 1.3
    }
  },
  "colors": {
    "primary": "#2563eb",
    "primary_hover": "#1d4ed8",
    "secondary": "#1e40af",
    "secondary_hover": "#1e3a8a",
    "accent": "#3b82f6",
    "accent_hover": "#60a5fa",
    "text": "#1f2937",
    "text_light": "#6b7280",
    "text_muted": "#9ca3af",
    "background": "#ffffff",
    "surface": "#f9fafb",
    "surface_hover": "#f3f4f6",
    "border": "#e5e7eb",
    "border_focus": "#3b82f6",
    "error": "#ef4444",
    "success": "#10b981",
    "warning": "#f59e0b",
    "info": "#3b82f6"
  },
  "spacing": {
    "base_unit": "8px",
    "component_gap": "48px",
    "section_gap": "96px",
    "container_padding": "24px",
    "content_max_width": "1200px"
  },
  "effects": {
    "border_radius": "12px",
    "border_radius_sm": "8px",
    "border_radius_lg": "16px",
    "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "shadow_sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "shadow_lg": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
    "transitions": "all 0.2s ease",
    "transitions_slow": "all 0.3s ease",
    "blur": "blur(10px)"
  },
  "components": {
    "button": {
      "padding": "12px 24px",
      "font_weight": "600",
      "letter_spacing": "-0.01em"
    },
    "card": {
      "padding": "24px",
      "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "padding": "12px 16px",
      "border_width": "1px"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "font_scale_mobile": 0.9,
    "spacing_scale_mobile": 0.8
  }
}
