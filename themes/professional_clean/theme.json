{
  "theme_id": "professional_clean",
  "theme_name": "Professional Clean",
  "version": "1.0.0",
  "description": "A clean, professional theme perfect for business and corporate media kits",
  "preview_image": "professional-clean-preview.jpg",
  "defaultPreset": "medium",
  "typography": {
    "primary_font": {
      "family": "Inter, sans-serif",
      "weights": [300, 400, 600, 700],
      "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "heading_font": {
      "family": "Montserrat, sans-serif",
      "weights": [400, 600, 700, 800],
      "fallback": "Arial, sans-serif"
    },
    "font_scale": 1.25,
    "line_height": {
      "body": 1.7,
      "heading": 1.3
    }
  },
  "colors": {
    "primary": "#2563eb",
    "primary_hover": "#1d4ed8",
    "secondary": "#1e40af",
    "secondary_hover": "#1e3a8a",
    "accent": "#3b82f6",
    "accent_hover": "#60a5fa",
    "text": "#1f2937",
    "text_light": "#6b7280",
    "text_muted": "#9ca3af",
    "background": "#ffffff",
    "surface": "#f9fafb",
    "surface_hover": "#f3f4f6",
    "border": "#e5e7eb",
    "border_focus": "#3b82f6",
    "error": "#ef4444",
    "success": "#10b981",
    "warning": "#f59e0b",
    "info": "#3b82f6"
  },
  "spacing": {
    "base_unit": "8px",
    "component_gap": "48px",
    "section_gap": "96px",
    "container_padding": "24px",
    "content_max_width": "1200px"
  },
  "effects": {
    "border_radius": "12px",
    "border_radius_sm": "8px",
    "border_radius_lg": "16px",
    "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "shadow_sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "shadow_lg": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
    "transitions": "all 0.2s ease",
    "transitions_slow": "all 0.3s ease",
    "blur": "blur(10px)"
  },
  "components": {
    "button": {
      "padding": "12px 24px",
      "font_weight": "600",
      "letter_spacing": "-0.01em"
    },
    "card": {
      "padding": "24px",
      "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "padding": "12px 16px",
      "border_width": "1px"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "font_scale_mobile": 0.9,
    "spacing_scale_mobile": 0.8
  }
}
