{
  "theme_id": "podcast_bold",
  "theme_name": "Podcast Bold",
  "version": "2.0.0",
  "description": "High-energy template for dynamic podcast guests who want to make an impact. Vibrant colors, bold typography, and attention-grabbing layouts.",
  "category": "podcast",
  "metadata": {
    "audience_type": "podcaster",
    "audience_label": "Podcast Guests",
    "style_variant": "bold",
    "style_label": "Bold",
    "icon": "fa-solid fa-podcast",
    "preview_colors": ["#ea580c", "#facc15"],
    "tags": ["podcast", "bold", "energetic", "vibrant", "audio"],
    "is_premium": false,
    "is_new": true,
    "sort_order": 26,
    "author": "Guestify",
    "use_case": "Energetic podcast guests, entertainment personalities, motivational experts"
  },
  "preview_image": "preview.jpg",
  "thumbnail_image": "thumbnail.jpg",
  "defaultPreset": "large",
  "defaultContent": {
    "sections": [
      {
        "id": "hero-section",
        "type": "full_width",
        "background": "gradient-animated",
        "components": [
          {
            "type": "hero",
            "settings": {
              "layout": "center_aligned",
              "imageStyle": "circle",
              "showCTA": true,
              "minHeight": "650px",
              "textColor": "#ffffff",
              "style": "bold"
            },
            "data": {
              "headline": "YOUR PODCAST'S NEXT HIT EPISODE",
              "subheadline": "Expert in [Topic] | 200+ Podcast Appearances",
              "description": "Bringing energy, insights, and unforgettable stories to every conversation.",
              "cta_text": "BOOK ME NOW"
            }
          }
        ]
      },
      {
        "id": "stats-section",
        "type": "full_width",
        "background": "dark",
        "components": [
          {
            "type": "stats",
            "settings": {
              "layout": "horizontal",
              "columns": 4,
              "showIcons": true,
              "animateNumbers": true,
              "colorScheme": "gradient",
              "style": "bold"
            },
            "data": {
              "items": [
                { "value": "200+", "label": "Podcast Appearances", "icon": "microphone" },
                { "value": "5M+", "label": "Total Downloads", "icon": "headphones" },
                { "value": "4.9★", "label": "Host Rating", "icon": "star" },
                { "value": "100%", "label": "Repeat Bookings", "icon": "check" }
              ]
            }
          }
        ]
      },
      {
        "id": "podcast-player-section",
        "type": "full_width",
        "components": [
          {
            "type": "podcast-player",
            "settings": {
              "layout": "featured-bold",
              "showEpisodeList": true,
              "maxEpisodes": 4,
              "style": "cards-gradient"
            },
            "data": {
              "title": "HEAR ME IN ACTION",
              "subtitle": "Top-rated episodes from recent appearances",
              "episodes": [
                {
                  "podcast_name": "The Top Podcast",
                  "episode_title": "High-Energy Discussion on [Topic]",
                  "duration": "65 min"
                },
                {
                  "podcast_name": "Another Hit Show",
                  "episode_title": "Deep Dive That Went Viral",
                  "duration": "48 min"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "topics-section",
        "type": "full_width",
        "background": "gradient",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "grid",
              "columns": 3,
              "showDescriptions": true,
              "style": "cards-bold"
            },
            "data": {
              "title": "HOT TOPICS",
              "subtitle": "Conversations that light up the room",
              "items": [
                {
                  "title": "Breakthrough Stories",
                  "description": "Real talk about overcoming the impossible.",
                  "icon": "rocket"
                },
                {
                  "title": "Industry Disruption",
                  "description": "Controversial takes that get people talking.",
                  "icon": "bolt"
                },
                {
                  "title": "Behind the Scenes",
                  "description": "Stories I've never told before.",
                  "icon": "fire"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "testimonials-section",
        "type": "full_width",
        "components": [
          {
            "type": "testimonials",
            "settings": {
              "layout": "carousel",
              "showPhotos": true,
              "showCompany": true,
              "colorScheme": "gradient",
              "quoteStyle": "large"
            },
            "data": {
              "title": "HOST FAVORITES",
              "items": [
                {
                  "quote": "Pure fire from start to finish! Our most downloaded episode ever.",
                  "author": "Host Name",
                  "company": "Top Podcast"
                },
                {
                  "quote": "The comments section exploded. Listeners couldn't get enough!",
                  "author": "Host Name",
                  "company": "Another Podcast"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "bio-section",
        "type": "two_column",
        "columns": {
          "ratio": "40-60",
          "1": [
            {
              "type": "profile-photo",
              "settings": {
                "style": "rounded",
                "size": "large",
                "border": "gradient"
              },
              "data": {
                "alt": "Action shot"
              }
            }
          ],
          "2": [
            {
              "type": "biography",
              "settings": {
                "style": "bold",
                "showTitle": true
              },
              "data": {
                "title": "THE STORY",
                "content": "I don't do boring interviews. Every podcast appearance is an opportunity to create something memorable—real stories, genuine insights, and the kind of energy that keeps listeners hitting replay.\n\nWith 200+ podcast appearances under my belt, I know how to bring value to any format. Whether it's a 30-minute quick hit or a 3-hour deep dive, I'll leave your audience wanting more.\n\n**Signature move:** Making hosts laugh until they cry, then dropping knowledge bombs."
              }
            }
          ]
        }
      },
      {
        "id": "contact-section",
        "type": "full_width",
        "background": "gradient",
        "components": [
          {
            "type": "contact",
            "settings": {
              "style": "bold",
              "layout": "centered",
              "fields": ["name", "email", "podcast_name", "audience_size", "message"],
              "maxWidth": "650px"
            },
            "data": {
              "title": "LET'S CREATE MAGIC",
              "subtitle": "Your audience is waiting for this episode",
              "button_text": "BOOK THE EPISODE"
            }
          }
        ]
      }
    ]
  },
  "typography": {
    "primary_font": {
      "family": "Poppins, sans-serif",
      "weights": [400, 600, 700, 800],
      "fallback": "'Segoe UI', sans-serif"
    },
    "heading_font": {
      "family": "Bebas Neue, sans-serif",
      "weights": [400],
      "fallback": "Impact, sans-serif"
    },
    "font_scale": 1.3,
    "line_height": {
      "body": 1.7,
      "heading": 1.0
    }
  },
  "colors": {
    "primary": "#ea580c",
    "primary_hover": "#c2410c",
    "secondary": "#facc15",
    "secondary_hover": "#eab308",
    "accent": "#f97316",
    "text": "#1c1917",
    "text_light": "#57534e",
    "text_muted": "#a8a29e",
    "background": "#ffffff",
    "surface": "#fffbeb",
    "surface_hover": "#fef3c7",
    "border": "#fde68a",
    "gradient_start": "#ea580c",
    "gradient_end": "#facc15",
    "error": "#dc2626",
    "success": "#16a34a",
    "warning": "#f59e0b"
  },
  "spacing": {
    "base_unit": "10px",
    "component_gap": "64px",
    "section_gap": "100px",
    "container_padding": "24px",
    "content_max_width": "1300px"
  },
  "effects": {
    "border_radius": "20px",
    "border_radius_sm": "12px",
    "border_radius_lg": "28px",
    "shadow": "0 15px 40px rgba(234, 88, 12, 0.2)",
    "shadow_sm": "0 6px 20px rgba(234, 88, 12, 0.1)",
    "shadow_lg": "0 25px 60px rgba(234, 88, 12, 0.25)",
    "transitions": "all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)",
    "gradient": "linear-gradient(135deg, var(--gmkb-color-gradient-start), var(--gmkb-color-gradient-end))"
  },
  "components": {
    "button": {
      "padding": "18px 40px",
      "font_weight": "700",
      "letter_spacing": "0.05em",
      "text_transform": "uppercase"
    },
    "card": {
      "padding": "32px",
      "shadow": "0 10px 30px rgba(0, 0, 0, 0.1)"
    }
  },
  "animations": {
    "pulse": "pulse 2s infinite",
    "bounce": "bounce 1s infinite"
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "font_scale_mobile": 0.85,
    "spacing_scale_mobile": 0.7
  }
}
