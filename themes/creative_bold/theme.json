{
  "theme_id": "creative_bold",
  "theme_name": "Creative Bold",
  "version": "1.0.0",
  "description": "A vibrant, bold theme for creative professionals and artists",
  "preview_image": "creative-bold-preview.jpg",
  "typography": {
    "primary_font": {
      "family": "Poppins, sans-serif",
      "weights": [300, 400, 600, 700, 900],
      "fallback": "'Segoe UI', Tahoma, Geneva, sans-serif"
    },
    "heading_font": {
      "family": "Bebas Neue, sans-serif",
      "weights": [400],
      "fallback": "Impact, Helvetica, sans-serif"
    },
    "font_scale": 1.3,
    "line_height": {
      "body": 1.8,
      "heading": 1.1
    }
  },
  "colors": {
    "primary": "#f97316",
    "primary_hover": "#ea580c",
    "secondary": "#dc2626",
    "secondary_hover": "#b91c1c",
    "accent": "#fbbf24",
    "accent_hover": "#f59e0b",
    "text": "#111827",
    "text_light": "#4b5563",
    "text_muted": "#6b7280",
    "background": "#fffbeb",
    "surface": "#fef3c7",
    "surface_hover": "#fde68a",
    "border": "#fde68a",
    "border_focus": "#f97316",
    "error": "#dc2626",
    "success": "#059669",
    "warning": "#d97706",
    "info": "#2563eb",
    "gradient_start": "#f97316",
    "gradient_end": "#dc2626"
  },
  "spacing": {
    "base_unit": "10px",
    "component_gap": "60px",
    "section_gap": "120px",
    "container_padding": "30px",
    "content_max_width": "1400px"
  },
  "effects": {
    "border_radius": "24px",
    "border_radius_sm": "16px",
    "border_radius_lg": "32px",
    "border_radius_full": "9999px",
    "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.15)",
    "shadow_sm": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "shadow_lg": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "shadow_colored": "0 20px 25px -5px rgba(249, 115, 22, 0.3)",
    "transitions": "all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55)",
    "transitions_fast": "all 0.2s ease-out",
    "blur": "blur(20px)",
    "gradient": "linear-gradient(135deg, var(--gmkb-color-gradient-start), var(--gmkb-color-gradient-end))"
  },
  "components": {
    "button": {
      "padding": "16px 32px",
      "font_weight": "700",
      "letter_spacing": "0.05em",
      "text_transform": "uppercase"
    },
    "card": {
      "padding": "32px",
      "shadow": "0 10px 40px -15px rgba(0, 0, 0, 0.2)",
      "transform_hover": "translateY(-4px)"
    },
    "input": {
      "padding": "14px 20px",
      "border_width": "2px"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "font_scale_mobile": 0.85,
    "spacing_scale_mobile": 0.75
  },
  "animations": {
    "bounce": "bounce 1s infinite",
    "pulse": "pulse 2s infinite",
    "slide_in": "slideIn 0.5s ease-out"
  }
}
