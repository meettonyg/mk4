{
  "theme_id": "executive_leader",
  "theme_name": "Executive Leader",
  "version": "2.0.0",
  "description": "Refined, minimal template for C-suite executives, board members, and senior leaders. Emphasizes credibility, achievements, and professional presence.",
  "category": "executive",
  "metadata": {
    "audience_type": "executive",
    "audience_label": "Executives & Leaders",
    "style_variant": "minimal",
    "style_label": "Minimal",
    "icon": "fa-solid fa-user-tie",
    "preview_colors": ["#1a1a1a", "#8b7355"],
    "tags": ["executive", "ceo", "leadership", "board", "corporate", "c-suite"],
    "is_premium": true,
    "is_new": true,
    "sort_order": 8,
    "author": "Guestify",
    "use_case": "CEOs, CFOs, CTOs, board members, VPs, senior executives"
  },
  "preview_image": "preview.jpg",
  "thumbnail_image": "thumbnail.jpg",
  "defaultPreset": "medium",
  "defaultContent": {
    "sections": [
      {
        "id": "hero-section",
        "type": "full_width",
        "background": "minimal",
        "components": [
          {
            "type": "hero",
            "settings": {
              "layout": "split_screen",
              "imageStyle": "square",
              "showCTA": false,
              "minHeight": "500px",
              "textColor": "#1a1a1a",
              "style": "minimal"
            },
            "data": {
              "headline": "Executive Name",
              "subheadline": "Chief Executive Officer",
              "description": "Leading [Company] through transformation and sustainable growth."
            }
          }
        ]
      },
      {
        "id": "credentials-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "stats",
            "settings": {
              "layout": "horizontal",
              "columns": 4,
              "showIcons": false,
              "animateNumbers": false,
              "separator": true,
              "style": "minimal"
            },
            "data": {
              "items": [
                { "value": "25+", "label": "Years of Leadership" },
                { "value": "$2B+", "label": "Revenue Managed" },
                { "value": "10K+", "label": "Team Members Led" },
                { "value": "3", "label": "Successful Exits" }
              ]
            }
          }
        ]
      },
      {
        "id": "bio-section",
        "type": "full_width",
        "components": [
          {
            "type": "biography",
            "settings": {
              "style": "executive",
              "showTitle": true,
              "layout": "centered",
              "maxWidth": "800px"
            },
            "data": {
              "title": "Biography",
              "content": "[Name] is a seasoned executive with over 25 years of experience leading global organizations through periods of significant transformation and growth.\n\nAs CEO of [Company], [he/she] has driven the organization's strategic vision, resulting in [key achievement]. Prior to this role, [Name] served as [previous position] at [Previous Company], where [he/she] led [notable accomplishment].\n\n[Name] serves on the boards of [Board 1] and [Board 2], and is a frequent speaker on topics including corporate governance, digital transformation, and sustainable business practices.\n\n[He/She] holds an MBA from [Business School] and a [Degree] from [University]."
            }
          }
        ]
      },
      {
        "id": "experience-section",
        "type": "full_width",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "timeline",
              "style": "minimal",
              "showDates": true
            },
            "data": {
              "title": "Career Highlights",
              "items": [
                {
                  "title": "Chief Executive Officer",
                  "subtitle": "Current Company",
                  "date": "2020 - Present",
                  "description": "Leading strategic transformation and global expansion."
                },
                {
                  "title": "President & COO",
                  "subtitle": "Previous Company",
                  "date": "2015 - 2020",
                  "description": "Scaled operations from $500M to $1.5B in revenue."
                },
                {
                  "title": "SVP, Strategy",
                  "subtitle": "Earlier Company",
                  "date": "2010 - 2015",
                  "description": "Led M&A activities and market expansion initiatives."
                }
              ]
            }
          }
        ]
      },
      {
        "id": "boards-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "logo-grid",
            "settings": {
              "layout": "row",
              "columns": 5,
              "showLabels": true,
              "grayscale": false,
              "style": "minimal"
            },
            "data": {
              "title": "Board Memberships & Affiliations",
              "logos": [
                { "name": "Company Board 1", "role": "Board Director" },
                { "name": "Company Board 2", "role": "Advisory Board" },
                { "name": "Industry Association", "role": "Board Member" },
                { "name": "Nonprofit Org", "role": "Trustee" },
                { "name": "University", "role": "Visiting Fellow" }
              ]
            }
          }
        ]
      },
      {
        "id": "speaking-section",
        "type": "full_width",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "grid",
              "columns": 3,
              "showDescriptions": true,
              "style": "cards-minimal"
            },
            "data": {
              "title": "Speaking Topics",
              "items": [
                {
                  "title": "Digital Transformation",
                  "description": "Navigating change while maintaining operational excellence."
                },
                {
                  "title": "Leadership in Uncertainty",
                  "description": "Building resilient organizations and empowered teams."
                },
                {
                  "title": "Sustainable Growth",
                  "description": "Balancing stakeholder value with long-term sustainability."
                }
              ]
            }
          }
        ]
      },
      {
        "id": "testimonials-section",
        "type": "full_width",
        "components": [
          {
            "type": "testimonials",
            "settings": {
              "layout": "quotes",
              "showPhotos": false,
              "showCompany": true,
              "quoteStyle": "elegant",
              "maxTestimonials": 2,
              "colorScheme": "neutral"
            },
            "data": {
              "title": "",
              "items": [
                {
                  "quote": "One of the most thoughtful and strategic leaders I've had the privilege to work with.",
                  "author": "Board Chair Name",
                  "company": "Company Name"
                },
                {
                  "quote": "Combines deep industry expertise with genuine care for people and purpose.",
                  "author": "Industry Peer",
                  "company": "Peer Organization"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "media-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "interviews",
            "settings": {
              "layout": "list",
              "showLogos": true,
              "showDates": true,
              "maxItems": 4
            },
            "data": {
              "title": "Media & Press",
              "items": [
                {
                  "title": "Interview Title",
                  "publication": "Major Publication",
                  "date": "2024",
                  "link": "#"
                },
                {
                  "title": "Article or Feature Title",
                  "publication": "Business Magazine",
                  "date": "2024",
                  "link": "#"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "contact-section",
        "type": "full_width",
        "components": [
          {
            "type": "contact",
            "settings": {
              "style": "minimal",
              "layout": "centered",
              "fields": ["name", "email", "organization", "inquiry_type", "message"],
              "maxWidth": "600px"
            },
            "data": {
              "title": "Contact",
              "subtitle": "For speaking, board, or media inquiries",
              "button_text": "Send Message",
              "note": "Inquiries are reviewed by the executive office."
            }
          }
        ]
      }
    ]
  },
  "typography": {
    "primary_font": {
      "family": "EB Garamond, serif",
      "weights": [400, 500, 600],
      "fallback": "Georgia, Times New Roman, serif"
    },
    "heading_font": {
      "family": "EB Garamond, serif",
      "weights": [400, 500, 600],
      "fallback": "Georgia, serif"
    },
    "font_scale": 1.15,
    "line_height": {
      "body": 1.8,
      "heading": 1.3
    },
    "letter_spacing": {
      "body": "0.01em",
      "heading": "-0.01em",
      "uppercase": "0.15em"
    }
  },
  "colors": {
    "primary": "#1a1a1a",
    "primary_hover": "#333333",
    "secondary": "#666666",
    "accent": "#8b7355",
    "text": "#1a1a1a",
    "text_light": "#555555",
    "text_muted": "#888888",
    "background": "#ffffff",
    "surface": "#f8f8f6",
    "surface_hover": "#f0f0ee",
    "border": "#e5e5e0",
    "error": "#b91c1c",
    "success": "#166534",
    "warning": "#a16207"
  },
  "spacing": {
    "base_unit": "8px",
    "component_gap": "80px",
    "section_gap": "120px",
    "container_padding": "40px",
    "content_max_width": "960px"
  },
  "effects": {
    "border_radius": "0px",
    "border_radius_sm": "0px",
    "border_radius_lg": "0px",
    "shadow": "none",
    "shadow_sm": "none",
    "shadow_lg": "none",
    "transitions": "all 0.3s ease",
    "border_style": "1px solid var(--gmkb-color-border)"
  },
  "components": {
    "button": {
      "padding": "14px 36px",
      "font_weight": "400",
      "letter_spacing": "0.1em",
      "text_transform": "uppercase",
      "border_width": "1px",
      "background": "transparent"
    },
    "card": {
      "padding": "48px",
      "shadow": "none",
      "border_width": "1px"
    }
  },
  "special": {
    "minimal_decoration": true,
    "emphasis_through_spacing": true,
    "serif_typography": true
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1200px"
    },
    "font_scale_mobile": 0.95,
    "spacing_scale_mobile": 0.7
  }
}
