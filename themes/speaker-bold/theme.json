    "text": "#111827",
    "text_light": "#4b5563",
    "text_muted": "#6b7280",
    "background": "#ffffff",
    "surface": "#fef2f2",
    "surface_hover": "#fee2e2",
    "border": "#fecaca",
    "gradient_start": "#dc2626",
    "gradient_end": "#f97316",
    "error": "#dc2626",
    "success": "#16a34a",
    "warning": "#f59e0b"
  },
  "spacing": {
    "base_unit": "10px",
    "component_gap": "72px",
    "section_gap": "120px",
    "container_padding": "24px",
