        "id": "hero-section",
        "type": "full_width",
        "background": "gradient-animated",
        "components": [
          {
            "type": "hero",
            "settings": {
              "layout": "center_aligned",
              "imageStyle": "circle",
              "showCTA": true,
              "minHeight": "700px",
              "overlayOpacity": 0.7,
              "textColor": "#ffffff",
              "style": "bold"
            },
            "data": {
              "headline": "IGNITE YOUR POTENTIAL",
              "subheadline": "Keynote Speaker | Performance Coach | Bestselling Author",
