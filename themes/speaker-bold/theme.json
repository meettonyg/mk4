            "data": {
              "title": "EXPERIENCE THE ENERGY",
              "subtitle": "Watch a clip from my latest keynote",
              "video_url": "",
              "thumbnail": ""
            }
          }
        ]
      },
      {
        "id": "topics-section",
        "type": "full_width",
        "background": "gradient",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "grid",
              "columns": 3,
              "showDescriptions": true,
              "style": "cards-bold"
            },
            "data": {
              "title": "SIGNATURE KEYNOTES",
              "subtitle": "Programs that create lasting transformation",
              "items": [
                {
                  "title": "Unleash Your Inner Fire",
