          }
        ]
      },
      {
        "id": "stats-section",
        "type": "full_width",
        "background": "dark",
        "components": [
          {
            "type": "stats",
            "settings": {
              "layout": "horizontal",
              "columns": 4,
              "showIcons": true,
              "animateNumbers": true,
              "colorScheme": "gradient",
              "style": "bold"
            },
            "data": {
              "items": [
                { "value": "1M+", "label": "Lives Impacted", "icon": "fire" },
                { "value": "500+", "label": "Stages Rocked", "icon": "bolt" },
                { "value": "30+", "label": "Countries", "icon": "globe" },
                { "value": "99%", "label": "Standing Ovations", "icon": "star" }
