  "typography": {
    "primary_font": {
      "family": "Poppins, sans-serif",
      "weights": [400, 600, 700, 800, 900],
      "fallback": "'Segoe UI', sans-serif"
    },
    "heading_font": {
      "family": "Bebas Neue, sans-serif",
      "weights": [400],
      "fallback": "Impact, Helvetica, sans-serif"
    },
    "font_scale": 1.35,
    "line_height": {
      "body": 1.7,
      "heading": 1.0
    },
    "letter_spacing": {
      "body": "0",
      "heading": "0.05em"
    }
  },
  "colors": {
    "primary": "#dc2626",
    "primary_hover": "#b91c1c",
    "secondary": "#f97316",
    "secondary_hover": "#ea580c",
