{
  "theme_id": "speaker_pro",
  "theme_name": "Speaker Pro",
  "version": "2.0.0",
  "description": "Professional template designed for keynote speakers, trainers, and public speakers. Features prominent speaking topics, testimonials, and booking integration.",
  "category": "speaker",
  "metadata": {
    "tags": ["speaker", "keynote", "trainer", "public-speaking", "conference"],
    "is_premium": false,
    "is_new": true,
    "sort_order": 5,
    "author": "Guestify",
    "use_case": "Keynote speakers, corporate trainers, TEDx speakers, conference presenters"
  },
  "preview_image": "preview.jpg",
  "thumbnail_image": "thumbnail.jpg",
  "defaultPreset": "large",
  "defaultContent": {
    "sections": [
      {
        "id": "hero-section",
        "type": "full_width",
        "background": "gradient",
        "components": [
          {
            "type": "hero",
            "settings": {
              "layout": "split_screen",
              "imageStyle": "rounded",
              "showCTA": true,
              "minHeight": "600px",
              "overlayOpacity": 0.3
            },
            "data": {
              "headline": "Inspiring Audiences Worldwide",
              "subheadline": "Keynote Speaker | Leadership Expert | Author",
              "description": "Transforming organizations through powerful storytelling and actionable insights.",
              "cta_text": "Book Me to Speak",
              "cta_link": "#booking"
            }
          }
        ]
      },
      {
        "id": "stats-section",
        "type": "full_width",
        "background": "surface",
        "components": [
          {
            "type": "stats",
            "settings": {
              "layout": "horizontal",
              "columns": 4,
              "showIcons": true,
              "animateNumbers": true,
              "colorScheme": "blue",
              "background": "transparent"
            },
            "data": {
              "title": "",
              "items": [
                { "value": "500+", "label": "Keynotes Delivered", "icon": "microphone" },
                { "value": "100K+", "label": "Audience Members", "icon": "users" },
                { "value": "25+", "label": "Countries Visited", "icon": "globe" },
                { "value": "98%", "label": "Client Satisfaction", "icon": "star" }
              ]
            }
          }
        ]
      },
      {
        "id": "topics-section",
        "type": "full_width",
        "components": [
          {
            "type": "topics",
            "settings": {
              "layout": "grid",
              "columns": 3,
              "showDescriptions": true,
              "style": "cards"
            },
            "data": {
              "title": "Speaking Topics",
              "subtitle": "Customized presentations for your audience",
              "items": [
                {
                  "title": "Leadership in the Digital Age",
                  "description": "Navigate change and inspire your team through digital transformation.",
                  "icon": "compass"
                },
                {
                  "title": "Building High-Performance Teams",
                  "description": "Strategies for creating culture that drives results.",
                  "icon": "users"
                },
                {
                  "title": "Innovation & Creative Thinking",
                  "description": "Unlock your organization's creative potential.",
                  "icon": "lightbulb"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "video-section",
        "type": "full_width",
        "background": "dark",
        "components": [
          {
            "type": "video-intro",
            "settings": {
              "autoplay": false,
              "showControls": true,
              "aspectRatio": "16:9",
              "style": "featured"
            },
            "data": {
              "title": "See Me in Action",
              "subtitle": "Watch highlights from recent keynotes",
              "video_url": "",
              "thumbnail": ""
            }
          }
        ]
      },
      {
        "id": "testimonials-section",
        "type": "full_width",
        "components": [
          {
            "type": "testimonials",
            "settings": {
              "layout": "carousel",
              "showPhotos": true,
              "showCompany": true,
              "showRatings": false,
              "maxTestimonials": 6,
              "quoteStyle": "large",
              "colorScheme": "neutral"
            },
            "data": {
              "title": "What Event Organizers Say",
              "items": [
                {
                  "quote": "One of the most impactful speakers we've ever had. The audience was captivated from start to finish.",
                  "author": "Sarah Johnson",
                  "role": "Event Director",
                  "company": "Global Leadership Summit"
                },
                {
                  "quote": "Incredible energy and actionable takeaways. Our team is still talking about the presentation months later.",
                  "author": "Michael Chen",
                  "role": "VP of Learning",
                  "company": "Fortune 500 Company"
                },
                {
                  "quote": "Professional, engaging, and truly transformative. Exceeded all expectations.",
                  "author": "Amanda Peters",
                  "role": "Conference Chair",
                  "company": "Industry Association"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "bio-section",
        "type": "two_column",
        "columns": {
          "ratio": "60-40",
          "1": [
            {
              "type": "biography",
              "settings": {
                "style": "narrative",
                "showTitle": true
              },
              "data": {
                "title": "About",
                "content": "With over 15 years of experience in leadership development, I've had the privilege of working with organizations across the globe to unlock their potential.\n\nMy approach combines research-backed insights with real-world experience, creating presentations that inspire action and drive measurable results.\n\nWhen I'm not on stage, you'll find me writing my next book, mentoring emerging leaders, or exploring new cultures."
              }
            }
          ],
          "2": [
            {
              "type": "profile-photo",
              "settings": {
                "style": "rounded",
                "size": "large",
                "showCaption": false
              },
              "data": {
                "alt": "Professional speaker headshot"
              }
            }
          ]
        }
      },
      {
        "id": "booking-section",
        "type": "full_width",
        "background": "primary",
        "components": [
          {
            "type": "booking-calendar",
            "settings": {
              "style": "availability",
              "showTimezone": true,
              "ctaStyle": "prominent"
            },
            "data": {
              "title": "Book Me for Your Next Event",
              "subtitle": "Check availability and start the conversation",
              "cta_text": "Check Availability"
            }
          }
        ]
      },
      {
        "id": "contact-section",
        "type": "two_column",
        "columns": {
          "ratio": "50-50",
          "1": [
            {
              "type": "contact",
              "settings": {
                "style": "form",
                "fields": ["name", "email", "organization", "event_date", "message"],
                "showLabels": true
              },
              "data": {
                "title": "Get in Touch",
                "subtitle": "Let's discuss how I can add value to your event",
                "button_text": "Send Inquiry"
              }
            }
          ],
          "2": [
            {
              "type": "social",
              "settings": {
                "layout": "vertical",
                "showLabels": true,
                "iconSize": "large"
              },
              "data": {
                "title": "Connect With Me"
              }
            }
          ]
        }
      }
    ]
  },
  "typography": {
    "primary_font": {
      "family": "Inter, sans-serif",
      "weights": [400, 500, 600, 700],
      "fallback": "-apple-system, BlinkMacSystemFont, sans-serif"
    },
    "heading_font": {
      "family": "Playfair Display, serif",
      "weights": [400, 600, 700],
      "fallback": "Georgia, serif"
    },
    "font_scale": 1.25,
    "line_height": {
      "body": 1.7,
      "heading": 1.2
    }
  },
  "colors": {
    "primary": "#1e3a5f",
    "primary_hover": "#152c4a",
    "secondary": "#c9a227",
    "secondary_hover": "#b8911f",
    "accent": "#e8b923",
    "text": "#1a1a2e",
    "text_light": "#4a5568",
    "text_muted": "#718096",
    "background": "#ffffff",
    "surface": "#f7f8fa",
    "surface_hover": "#edf0f4",
    "border": "#e2e8f0",
    "error": "#e53e3e",
    "success": "#38a169",
    "warning": "#d69e2e"
  },
  "spacing": {
    "base_unit": "8px",
    "component_gap": "64px",
    "section_gap": "120px",
    "container_padding": "24px",
    "content_max_width": "1200px"
  },
  "effects": {
    "border_radius": "8px",
    "border_radius_sm": "4px",
    "border_radius_lg": "16px",
    "shadow": "0 4px 20px rgba(0, 0, 0, 0.08)",
    "shadow_sm": "0 2px 8px rgba(0, 0, 0, 0.04)",
    "shadow_lg": "0 12px 40px rgba(0, 0, 0, 0.12)",
    "transitions": "all 0.3s ease",
    "transitions_fast": "all 0.15s ease"
  },
  "components": {
    "button": {
      "padding": "14px 32px",
      "font_weight": "600",
      "letter_spacing": "0.02em",
      "text_transform": "none"
    },
    "card": {
      "padding": "32px",
      "shadow": "0 4px 20px rgba(0, 0, 0, 0.06)"
    },
    "input": {
      "padding": "14px 18px",
      "border_width": "1px"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    },
    "font_scale_mobile": 0.9,
    "spacing_scale_mobile": 0.75
  }
}
